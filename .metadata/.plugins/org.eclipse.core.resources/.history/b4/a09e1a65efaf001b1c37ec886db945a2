package com;

interface Addition{
	
	abstract int add(int n);
}


public class Test {
	
	public static int add(int n, int arr[]) {
		int sum = 0;
		for(int i = 0; i< arr.length;i++) {
			sum += arr[i];
		}
		return sum;
	}

	public static void main(String[] args) {
		
		int array[] = {2, 4, 2, 4};
		int n = 3;
		
		int sum = add(n, array);
		
